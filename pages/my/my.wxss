.my-head{
  flex-direction: column;
  margin: 30rpx;
  display: flex;
}
.flex-item{
  display: flex;
  flex-direction: row;
}
.userbox{
  display: flex;
  flex-direction: row;
}
.radius {
  border-radius: 15rpx;
}
.shadow {
  box-shadow: 0 4rpx 20rpx 0 rgba(212,217,223,.5)
}
.confirm-btn{
  border: 3rpx solid#96CDCD;
  color: #96CDCD;
  background-color: 	#FFFFFF;
  font-size: 30rpx;
  margin-top: 30rpx;
  width: 250rpx;
  border-radius: 50rpx;
}

.hover{
  opacity: 0.9;
  transform: scale(0.8,0.8); /*缩放*/
  background: gray;
}

.headerbox{
  flex-direction: column;
  background: #f8af33;
  padding-top:50rpx;
  align-items: center;
  height: 300rpx;
  bottom: 20rpx
}

.user_info {
  display: flex;
  padding: 0 40rpx;
  position: relative
}
.aui-tour-content{
  width:100%;
  height:300rpx;
  background-image: -webkit-gradient(linear,left top,right top,from(#46cb8f),to(#2DCB73));
  background-image: -webkit-linear-gradient(left,#46cb8f,#2DCB73);
  background-image: -moz-linear-gradient(left,#46cb8f,#2DCB73);
  background-image: linear-gradient(to right,#46cb8f,#2DCB73);
  background-color: #46cb8f;
  border-radius:0 0 50% 50%;
}
.aui-tour-box{
  position:relative;
  overflow:hidden;
  margin-top:-200rpx;
}
.avatar{
  overflow:hidden;
  display: block;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.nickname-gender {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  text-align: center;
  justify-content:center;
  align-content:center;
  align-items:center;
}

.phone{
  display: flex;
  padding: 40rpx;
  color: white;
  align-items: center;
}

.info-icon l-icon{
  position:absolute;
  top: 80rpx;
  right: 10rpx;
}
.UCenter-bg {
  background-size: cover;
  display: flex;
  justify-content: center;
  padding: 80rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;
  height: 100rpx;
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.male{
  color: aqua;
}
.female{
  color: hotpink;
}
